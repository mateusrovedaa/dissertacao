# =============================================================================
# Example terraform.tfvars
# Copy this file to terraform.tfvars and fill in the values
# =============================================================================

# AWS Region
aws_region = "us-east-1"

# Project naming
project_name = "vispac"
environment  = "dev"

# SSH public key (generate with: ssh-keygen -t rsa -b 4096 -f ~/.ssh/vispac)
ssh_public_key = "ssh-rsa AAAA... your-email@example.com"

# SSH access restriction (use your IP for security)
allowed_ssh_cidrs = ["YOUR_IP/32"]  # e.g., ["203.0.113.50/32"]

# =============================================================================
# Edge Configuration - Per-edge dataset selection
# =============================================================================
# Each edge must be explicitly configured with:
#   - id: Unique identifier for the edge (e.g., "edge-01")
#   - high_patients: Number of patients from high_risk dataset (randomly selected)
#   - low_patients: Number of patients from low_risk dataset (randomly selected)
# 
# Examples:
#   - Only low_risk:  { id = "edge-01", high_patients = 0, low_patients = 5 }
#   - Only high_risk: { id = "edge-02", high_patients = 4, low_patients = 0 }
#   - Mixed:          { id = "edge-03", high_patients = 2, low_patients = 3 }
# =============================================================================

edge_configs = [
  { id = "edge-01", high_patients = 0, low_patients = 5 },   # Low risk only
  { id = "edge-02", high_patients = 2, low_patients = 3 },   # Mixed
  { id = "edge-03", high_patients = 4, low_patients = 0 },   # High risk only
  { id = "edge-04", high_patients = 0, low_patients = 6 },   # Low risk only
]

# Instance types
edge_instance_type  = "t3.micro"  # 2 vCPU, 1GB RAM
fog_instance_type   = "t3.small"  # 2 vCPU, 2GB RAM  
cloud_instance_type = "t3.small"  # 2 vCPU, 2GB RAM

# Edge resource limits (simulating constrained IoT devices)
edge_memory_limit_mb   = 256    # 256MB RAM limit
edge_cpu_limit_percent = 50     # 50% of 1 vCPU

# Application configuration
git_repo_url = "https://github.com/YOUR_USER/dissertacao.git"
git_branch   = "main"

# Test scenario configuration
# Options: scenario1_baseline, scenario2_static, scenario3_vispac
# - scenario1_baseline: No compression, fixed 1s collection (raw data)
# - scenario2_static:   Compression enabled, fixed intervals (no adaptation)
# - scenario3_vispac:   Full ViSPAC with compression and dynamic adaptation
scenario = "scenario3_vispac"

# Database password (change this!)
db_password = "your-secure-password-here"
